BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.4, 1
        Label:
            text: "Sort by:"
        Spinner:
            text: app.current_sort
            values: app.sort_type
            on_text: app.sort_places(self.text)
        Label:
            text: "Add New Place..."
        Label:
            text: "Name:"
        TextInput:
            id: input_name
            multiline: False
            write_tab: False
        Label:
            text: "Country:"
        TextInput:
            id: input_country
            multiline: False
            write_tab: False
        Label:
            text: "Priority:"
        TextInput:
            id: input_priority
            multiline: False
            write_tab: False
        Button:
            text: "Add Places"
            on_press: app.handle_add_place()
        Button:
            text: "Clear"
            on_press: app.handle_clear()
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            id: place_status
        BoxLayout:
            orientation: 'vertical'
            id: place_buttons
        Label:
            size_hint_y: 0.1
            id: status_label
